{%- if template.name =='product'-%}
<header class="header_cart">
    <div class="text">
            <span class="span"><h3>{{product.title}}</h3></span>
            <span class="span"><h3>M/Blue</h3></span>
    </div>
    </div>
</header>

<style>
    .header_cart {
        transition: all 0.7s;
        opacity: 0;
        color: white;
        height: 45px;
        width: 62%;
        background-color: black;
        position: fixed;
        margin-top: 40px;
        display: block;
        top:11%;
        z-index: 1;
    }
    .span {
        font-size: 15px;
        text-align: center;

        height: 100%;
    }
    .text{
        width: 100%;
    }
    .Custom_Button__Dos {
    background-color: #272626;
    border: "1px solid red !important";
    position:-webkit-sticky !important; 
    position:sticky !important; 
    top:0 !important;
    width: 20%;
    float: right;
    height: 100%;
  }
  .ProductForm__AddToCart{
    color:white;
    height: 100%;
  }
</style>

<script>
    let animado = document.querySelector(".header_cart");

    function mostrarScroll(){
        let scrollTop = document.documentElement.scrollTop;
        let alturaAnimado = animado.offsetTop+1300;
        if(alturaAnimado < scrollTop){
            animado.style.opacity= 1;
        }
        else if(alturaAnimado > scrollTop){
            animado.style.opacity =0;
        }
    }

    window.addEventListener('scroll', mostrarScroll);
</script>
{%-endif-%}